@import "globals";
@import "fonts";

body, html 
  margin 0
  position absolute
  z-index 999

  .left-background
    position fixed
    left 0px
    top 0px

    img
      width auto
      height 100vh
      z-index 666
  
  .right-background
    position fixed
    right 0px
    top 0px
